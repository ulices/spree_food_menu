<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @menu } %>

<%= form_for [:admin, @menu], method: :put do |f| %>
  <fieldset>

    <legend align="center"><%= Spree.t(:new_option_type) %></legend>

    <%= render partial: 'spree/admin/menus/form', locals: { f: f } %>

    <%= render partial: 'spree/admin/menus/daily_products', locals: { week: @menu.dates_of_the_week } %>

    <%= render partial: 'spree/admin/shared/new_resource_links' %>

  </fieldset>
<% end %>
